RadarRover Code üöóüí®
Here's your complete, beginner-friendly Arduino code:

// ============================================
// RADARROVER - Autonomous Obstacle Avoidance
// ============================================
// Hardware: ESP32 + LD2410C + 2x HC-SR04 + L298N
// Author: OHM Assistant
// ============================================

#include <ld2410.h>

// ============================================
// PIN DEFINITIONS
// ============================================

// Motor Driver (L298N)
#define LEFT_IN1    16    // Left motor direction 1
#define LEFT_IN2    17    // Left motor direction 2
#define RIGHT_IN3   18    // Right motor direction 1
#define RIGHT_IN4   19    // Right motor direction 2
#define LEFT_ENA    21    // Left motor speed (PWM)
#define RIGHT_ENB   22    // Right motor speed (PWM)

// Ultrasonic Sensors (HC-SR04)
#define LEFT_TRIG   5
#define LEFT_ECHO   5     // Shared pin for mini wiring
#define RIGHT_TRIG  23
#define RIGHT_ECHO  23    // Shared pin for mini wiring

// Radar (LD2410C)
#define RADAR_RX    4     // ESP32 RX <- Radar TX
#define RADAR_TX    2     // ESP32 TX -> Radar RX (optional)

// ============================================
// CONFIGURATION - TWEAK THESE!
// ============================================

#define SAFE_DISTANCE     40    // cm - stop if obstacle closer
#define SIDE_THRESHOLD    25    // cm - side obstacle warning
#define BASE_SPEED        150   // 0-255, start slow!
#define TURN_SPEED        180   // Speed while turning
#define TURN_DURATION     400   // ms - how long to turn
#define SENSOR_DELAY      50    // ms - between readings

// ============================================
// GLOBAL OBJECTS
// ============================================

ld2410 radar;

// PWM Configuration for ESP32
const int pwmFreq = 1000;
const int pwmResolution = 8;  // 0-255

// ============================================
// SETUP
// ============================================

void setup() {
  // Serial for debugging
  Serial.begin(115200);
  Serial.println("RadarRover Starting...");
  
  // Initialize radar on Serial2
  Serial2.begin(256000, SERIAL_8N1, RADAR_RX, RADAR_TX);
  if(radar.begin(Serial2)) {
    Serial.println("‚úì Radar connected!");
  } else {
    Serial.println("‚úó Radar failed - check wiring!");
  }
  
  // Motor pins
  pinMode(LEFT_IN1, OUTPUT);
  pinMode(LEFT_IN2, OUTPUT);
  pinMode(RIGHT_IN3, OUTPUT);
  pinMode(RIGHT_IN4, OUTPUT);
  
  // PWM setup for motor speed control
  ledcSetup(0, pwmFreq, pwmResolution);  // Channel 0 = Left
  ledcSetup(1, pwmFreq, pwmResolution);  // Channel 1 = Right
  ledcAttachPin(LEFT_ENA, 0);
  ledcAttachPin(RIGHT_ENB, 1);
  
  // Quick motor test
  Serial.println("Motor test...");
  moveForward();
  delay(200);
  stopMotors();
  
  Serial.println("‚úì RadarRover Ready!");
  delay(1000);
}

// ============================================
// MAIN LOOP
// ============================================

void loop() {
  // Read all sensors
  int frontDist = readRadar();
  int leftDist = readUltrasonic(LEFT_TRIG, LEFT_ECHO);
  int rightDist = readUltrasonic(RIGHT_TRIG, RIGHT_ECHO);
  
  // Debug output
  Serial.print("Front: "); Serial.print(frontDist);
  Serial.print("cm | Left: "); Serial.print(leftDist);
  Serial.print("cm | Right: "); Serial.print(rightDist);
  Serial.println("cm");
  
  // Decision logic
  if (frontDist > SAFE_DISTANCE) {
    // Path is clear - drive forward!
    moveForward();
    
  } else {
    // Obstacle ahead - stop and decide
    stopMotors();
    delay(100);
    
    // Turn toward the clearer side
    if (leftDist > rightDist && leftDist > SIDE_THRESHOLD) {
      Serial.println(">> Turning LEFT");
      turnLeft();
      delay(TURN_DURATION);
      
    } else if (rightDist > SIDE_THRESHOLD) {
      Serial.println(">> Turning RIGHT");
      turnRight();
      delay(TURN_DURATION);
      
    } else {
      // Both sides blocked - spin around!
      Serial.println(">> SPIN!");
      turnRight();
      delay(TURN_DURATION * 2);
    }
    
    stopMotors();
    delay(100);
  }
  
  delay(SENSOR_DELAY);
}

// ============================================
// SENSOR FUNCTIONS
// ============================================

int readRadar() {
  radar.read();
  
  if(radar.presenceDetected()) {
    // Get distance in cm
    int distance = radar.movingTargetDistance();
    
    // If no moving target, check stationary
    if(distance == 0) {
      distance = radar.stationaryTargetDistance();
    }
    
    // Convert to cm and return
    if(distance > 0) {
      return distance;
    }
  }
  
  // No detection = path is clear (return large number)
  return 999;
}

int readUltrasonic(int trigPin, int echoPin) {
  // Send pulse
  pinMode(trigPin, OUTPUT);
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  
  // Read echo
  pinMode(echoPin, INPUT);
  long duration = pulseIn(echoPin, HIGH, 30000);  // 30ms timeout
  
  // Calculate distance in cm
  int distance = duration * 0.034 / 2;
  
  // Sanity check
  if(distance <= 0 || distance > 400) {
    return 999;  // No valid reading
  }
  
  return distance;
}

// ============================================
// MOTOR FUNCTIONS
// ============================================

void moveForward() {
  // Left motor forward
  digitalWrite(LEFT_IN1, HIGH);
  digitalWrite(LEFT_IN2, LOW);
  
  // Right motor forward
  digitalWrite(RIGHT_IN3, HIGH);
  digitalWrite(RIGHT_IN4, LOW);
  
  // Set speed
  ledcWrite(0, BASE_SPEED);
  ledcWrite(1, BASE_SPEED);
}

void stopMotors() {
  digitalWrite(LEFT_IN1, LOW);
  digitalWrite(LEFT_IN2, LOW);
  digitalWrite(RIGHT_IN3, LOW);
  digitalWrite(RIGHT_IN4, LOW);
  
  ledcWrite(0, 0);
  ledcWrite(1, 0);
}

void turnLeft() {
  // Left motor backward
  digitalWrite(LEFT_IN1, LOW);
  digitalWrite(LEFT_IN2, HIGH);
  
  // Right motor forward
  digitalWrite(RIGHT_IN3, HIGH);
  digitalWrite(RIGHT_IN4, LOW);
  
  ledcWrite(0, TURN_SPEED);
  ledcWrite(1, TURN_SPEED);
}

void turnRight() {
  // Left motor forward
  digitalWrite(LEFT_IN1, HIGH);
  digitalWrite(LEFT_IN2, LOW);
  
  // Right motor backward
  digitalWrite(RIGHT_IN3, LOW);
  digitalWrite(RIGHT_IN4, HIGH);
  
  ledcWrite(0, TURN_SPEED);
  ledcWrite(1, TURN_SPEED);
}

// ============================================
// END OF CODE
// ============================================
