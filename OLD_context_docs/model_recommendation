EXAMPLE FOR ANTROPIC CLAUDE OPUS 4.5:
/*
  npm i bytez.js || yarn add bytez.js
*/

import Bytez from "bytez.js"

const key = "976436aed804d1dd3578c22df7e090b2"
const sdk = new Bytez(key)

// choose claude-opus-4-5
const model = sdk.model("anthropic/claude-opus-4-5")

// send input to model
const { error, output } = await model.run([
  {
    "role": "user",
    "content": "Hello"
  }
])

console.log({ error, output });

for openai 4o :
/*
  npm i bytez.js || yarn add bytez.js
*/

import Bytez from "bytez.js"

const key = "976436aed804d1dd3578c22df7e090b2"
const sdk = new Bytez(key)

// choose gpt-4o
const model = sdk.model("openai/gpt-4o")

// send input to model
const { error, output } = await model.run([
  {
    "role": "user",
    "content": "Hello"
  }
])

console.log({ error, output });